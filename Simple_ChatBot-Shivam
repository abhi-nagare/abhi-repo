<body>

<div class="chat-box">
  <div class="header">ü§ñ Smart Chat Bot</div>

  <div class="messages" id="messages">
    <div class="message received">
      Hello! Ask me anything üòä
      <div class="time">Now</div>
    </div>
  </div>

  <div class="input-box">
    <input type="text" id="msg" placeholder="Type message...">
    <button onclick="sendMessage()">‚û§</button>
  </div>
</div>

<script>
const messages = document.getElementById("messages");
const input = document.getElementById("msg");

input.addEventListener("keypress", e => {
  if (e.key === "Enter") sendMessage();
});

function sendMessage() {
  const text = input.value.trim();
  if (!text) return;

  addMessage(text, "sent");
  input.value = "";

  setTimeout(() => {
    botReply(text.toLowerCase());
  }, 700);
}

function addMessage(text, type) {
  const div = document.createElement("div");
  div.className = "message " + type;
  div.innerHTML = text + `<div class="time">${new Date().toLocaleTimeString()}</div>`;
  messages.appendChild(div);
  messages.scrollTop = messages.scrollHeight;
}

function botReply(msg) {
  let reply = "Sorry, I didn't understand that ü§î";

  if (msg.includes("hello") || msg.includes("hi")) {
    reply = "Hello! üòä How can I help you?";
  }
  else if (msg.includes("how are you")) {
    reply = "I'm doing great! Thanks for asking üëç";
  }
  else if (msg.includes("your name")) {
    reply = "I'm a Smart Chat Bot ü§ñ";
  }
  else if (msg.includes("time")) {
    reply = "Current time is " + new Date().toLocaleTimeString();
  }
  else if (msg.includes("date")) {
    reply = "Today's date is " + new Date().toLocaleDateString();
  }
  else if (msg.includes("bye")) {
    reply = "Goodbye! Have a great day üëã";
  }
  else if (!isNaN(evalExpression(msg))) {
    reply = "Answer is: " + evalExpression(msg);
  }

  addMessage(reply, "received");
}

function evalExpression(exp) {
  try {
    return Function("return " + exp)();
  } catch {
    return NaN;
  }
}
</script>

</body>
